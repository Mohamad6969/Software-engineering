<Application x:Class="SnakeGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SnakeGame"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColor">#023020</SolidColorBrush>
        <SolidColorBrush x:Key="GridBackgroundColor">#90ee90</SolidColorBrush>
        <SolidColorBrush x:Key="GridLineColor">#FF0C0404</SolidColorBrush>
        <SolidColorBrush x:Key="TextColor">#EBEBEB</SolidColorBrush>
        <SolidColorBrush x:Key="OverlayColor">#7F000000</SolidColorBrush>
        <FontFamily x:Key="MainFont" >Assests/#Droid Sans Mono</FontFamily>


    </Application.Resources>
</Application>
